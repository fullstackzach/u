{
  "name": "root",
  "private": true,
  "scripts": {
    "check": "lerna exec --stream -- npm pack --dry-run",
    "clean": "lerna clean",
    "format": "node packages/u-scripts/bin/u prettier --write .",
    "format-check": "node packages/u-scripts/bin/u prettier --check .",
    "postinstall": "lerna bootstrap --no-ci",
    "prerelease": "node release-checks",
    "sort": "lerna exec -- npx sort-package-json",
    "test": "npm run format-check && lerna run test-ci",
    "test-local": "npm run format && lerna run test",
    "update": "lerna exec -- npx npm-check-updates -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "execa": "^4.1.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
